# cog.just

# ğŸ” Validate conventional commits
validate:
    cog check

# ğŸ“ Preview next version and changelog
changelog:
    cog changelog

# ğŸš€ Release new version based on commit history
release:
    cog bump --auto
    cog changelog
    git push --follow-tags

# ğŸ”§ Manual version bump (use `major`, `minor`, or `patch`)
bump VERSION:
    cog bump {{VERSION}}
    cog changelog
    git push --follow-tags

